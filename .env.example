# Authentication Secret (required for NextAuth v5)
# Generate using: openssl rand -hex 32
AUTH_SECRET=your_generated_secret_here

# Database URL (for production mode with real users)
# DATABASE_URL="postgresql://user:password@localhost:5432/mydb"

# Seed API Secret Key
SEED_SECRET="your-seed-secret-here"

# Cashfree Payment Gateway Configuration
# Get these from https://merchant.cashfree.com/
# - App ID: Found in merchant dashboard settings
# - Secret Key: Found in API Keys section
# - Webhook Secret: Generated in Webhooks section
CASHFREE_APP_ID="your-cashfree-app-id"
CASHFREE_SECRET_KEY="your-cashfree-secret-key"
CASHFREE_WEBHOOK_SECRET="your-webhook-secret"
CASHFREE_API_URL="https://api.cashfree.com/pg"
CASHFREE_ENV="production"

# Public Cashfree Configuration (for frontend)
NEXT_PUBLIC_CASHFREE_ENV="production"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ==================== CloudConvert Configuration ====================
# PPTX to Video/Audio Conversion Service
# Get API key from https://cloudconvert.com/dashboard/api-keys
CLOUDCONVERT_API_KEY="your-cloudconvert-api-key"
CLOUDCONVERT_WEBHOOK_SECRET="your-webhook-secret"
CLOUDCONVERT_WEBHOOK_URL="https://your-domain.com/api/course-builder/convert/webhook"

# ==================== File Storage (S3 or UploadThing) ====================
# AWS S3 Configuration (for storing PPTX, Video, Audio files)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-south-1"
AWS_S3_BUCKET="inr99-academy-uploads"

# Or use UploadThing (simpler for Next.js)
UPLOADTHING_SECRET="sk_live_..."
UPLOADTHING_APP_ID="your-app-id"
